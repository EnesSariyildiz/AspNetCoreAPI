@model UpdateStaffViewModel
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="m3">
        <div>
            <input type="hidden" asp-for="StaffID" />
            <label class="mt-3">staff name</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div>
            <label class="mt-3">staff title</label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div>
            <label class="mt-3">social media 1</label>
            <input type="text" asp-for="SocialMedia1" class="form-control" />
        </div>
        <div>
            <label class="mt-3">social media 2</label>
            <input type="text" asp-for="SocialMedia2" class="form-control" />
        </div>
        <div>
            <label class="mt-3">social media 3</label>
            <input type="text" asp-for="SocialMedia3" class="form-control" />
        </div>
        <button class="btn btn-outline-info mt-3">staff update</button>
    </div>
</form>

